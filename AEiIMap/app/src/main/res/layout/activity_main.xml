<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fr.castorflex.android.verticalviewpager.VerticalViewPager
        android:id="@+id/activity_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/normal_margin"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="@dimen/floor_button_size"
            android:id="@+id/activity_main_floor_up_ib"
            android:background="@android:color/transparent"
            android:src="@android:drawable/arrow_up_float"
            android:layout_height="@dimen/floor_button_size" />

        <ImageButton
            android:layout_width="@dimen/floor_button_size"
            android:id="@+id/activity_main_floor_down_ib"
            android:background="@android:color/transparent"
            android:src="@android:drawable/arrow_down_float"
            android:layout_height="@dimen/floor_button_size" />
    </LinearLayout>

</RelativeLayout>


