<?xml version="1.0" encoding="utf-8"?>
<pl.polsl.aeiimap.views.ZoomableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/fragment_ground_floor_zoomable_rl"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GROUND_FLOOR"/>

    <RelativeLayout
        android:id="@+id/fragment_ground_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/fragment_ground_floor_503_ib"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_button_blue" />

        <pl.polsl.aeiimap.views.LightTextView
            android:id="@+id/fragment_ground_room_number"
            style="@style/OutlineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="503" />

    </RelativeLayout>



</pl.polsl.aeiimap.views.ZoomableRelativeLayout>